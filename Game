	        Object[] valores = personagem.ToString();
	        
	        String classe = (String) valores[0];
	        String nome = (String) valores[1];
	        int nivel = (int) valores[2]; 
	        
	        
	        
	        
	        

	        
	        
	        	
	        
	    }
	}

